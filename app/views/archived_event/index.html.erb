<body>


      <div class="container">
      <h5 class="mb-4 text-center"><u> Evenement archivés. </u></h5>
        <div class="row">

          <% @events.each do |i| %>
            <div class="col-md-4">
              <div style="height: 80px"><h2> <%=truncate(i.title, :length => 20)%></h2></div>
              <div style="height: 80px"> <p><%=truncate(i.description, :length => 100)%></p> </div>
              <p> Organisé par :<b> <%=i.administrator.first_name%></b></p>
              <p> Aura lieu le :<b> <%=i.start_date%></b> </p>
              <p><a class="btn btn-secondary" href=<%=event_path(i.id)%> role="button">Voir l'événement &raquo;</a></p>
            </div>
          <%end%>
          
        </div>
      </div>
  </body>
